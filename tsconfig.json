{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "baseUrl": ".",
    "paths": { "src/*": ["./src/*"] }
  },
  "exclude": ["node_modules"]
}
